{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api" },
      { "source": "/(.*)", "destination": "/" }
    ],
    "functions": {
      "api/**/*.js": {
        "runtime": "nodejs18.x"
      }
    }
  }